{
  "name": "nextjs_template",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint '{src,cypress}/**/*.{ts,tsx}' --fix",
    "lint:precommit": "eslint '{src,cypress}/**/*.{ts,tsx}' --max-warnings 0",
    "fmt": "prettier -w -l './**/*.{js,jsx,ts,tsx,json}'",
    "fmt:precommit": "prettier -l './**/*.{js,jsx,ts,tsx,json}'"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": "npm run lint:precommit",
    "src/**/*.{js,jsx,ts,tsx,json,css,scss}": "npm run fmt:precommit"
  },
  "dependencies": {
    "next": "14.2.3",
    "react": "18.3.1",
    "react-dom": "18.3.1"
  },
  "devDependencies": {
    "@types/eslint": "8.56.9",
    "@types/node": "18.17.5",
    "@types/prettier": "2.7.3",
    "@types/react": "18.3.1",
    "@types/react-dom": "18.3.0",
    "@typescript-eslint/eslint-plugin": "6.21.0",
    "@typescript-eslint/parser": "6.21.0",
    "eslint": "8.57.0",
    "eslint-config-next": "13.5.6",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-import": "2.29.1",
    "husky": "8.0.3",
    "lint-staged": "14.0.1",
    "prettier": "3.2.5",
    "typescript": "5.4.5"
  }
}
